<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
     <%- include('./partials/style') %>
  </head>
  <body>
     <%- include('./partials/topbar') %>

     <div class="sort-section">
        <label for="sort">Sort by:</label>
        <select onchange="window.location.href = '/?pages=1$sort=' + this.value">
            <option value="title" <% if(sort ==='title') {%> selected <% }%> >Title</option>
            <option value="createdAt" <% if(sort ==='createdAt') {%> selected <% }%> >Date</option>

        </select>

     </div>

     <% if(blogData.length > 0) {
        for(let i = 0; i < blogData.length; i++){ %>

            <div class="blog-card">
                <div class="blog-title"> <%= blogData[i].title %> </div>
                <div class="blog-body"><%= blogData[i].body %></div>
                <!-- <div class="blog-actions">
                    <a class="edit-button" href="http://localhost:3000/editblog?blogId=<%= blogData[i]._id %>">Edit</a>
                     <a class="delete-button" href="http://localhost:3000/deleteblog?blogId=<%= blogData[i]._id %>">Delete</a>
                </div> -->
            </div>
    <% } } %>

    <div class="pagination">
        <% for(let i = 1; i<= pages; i++)  {%>
        <a href="/?page=<%= i%>" <% if(i==current) { %> class="activePage" <% } %> >
        <%= i %>
        </a> 
        <% } %>
        %>
    </div>

    
  </body>
</html>
